    <!--Header-->
    <%- include('../partials/header.ejs') %>

    <!--Main Navigation-->
    <%- include('../partials/navbar.ejs') %>

    <!--Content For Edit Page-->
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <br>
                <h1><%= title %></h1>

                <form class="form" method="POST">

                    <div class="form-group">
                        <label for="surveyNameTextFeild">Survey Name</label>
                        <input type="text" class="form-control"
                            id="surveyNameTextFeild"
                            placeholder="Enter Survey Name"
                            name="surveyName" 
                            value="<%= survey.SurveyName %>"
                            required>
                    </div>
                    

                    <div class="form-group">
                        <label for="q1TextFeild">Question 1</label>
                        <input type="text" class="form-control"
                            id="q1TextFeild"
                            placeholder="Enter Question 1"
                            name="question1"
                            value="<%= survey.Question1 %>" 
                            required>
                    </div>

                    <div class="form-group">
                        <label for="answer1TextFeild">Answer</label>
                        <input type="text" class="form-control"
                            id="answer1TextFeild"
                            placeholder="Enter Answer"
                            name="answer1"
                            value="<%= survey.Answer1 %>" 
                            required>
                    </div>

                    <div class="form-group">
                        <label for="q2TextFeild">Question 2</label>
                        <input type="text" class="form-control"
                            id="q2TextFeild"
                            placeholder="Enter Question 2"
                            name="question2"
                            value="<%= survey.Question2 %>" 
                            required>
                    </div>

                    <div class="form-group">
                        <label for="answer2TextFeild">Answer</label>
                        <input type="text" class="form-control"
                            id="answer2TextFeild"
                            placeholder="Enter Answer"
                            name="answer2"
                            value="<%= survey.Answer2 %>" 
                            required>
                    </div>

                    <br>

                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i>Submit
                    </button>

                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i>Cancel</a>

                </form>
                
            </div>
        </div>
    </div>

    <!--Footer-->
    <%- include('../partials/footer.ejs') %>